    }

    .privacy-section h2::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 20px;
      height: 2px;
      background: linear-gradient(45deg, #d4af37, #ffd700);
