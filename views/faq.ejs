<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FAQ - Club Verse</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Montserrat', sans-serif;
      color: #fff;
      background: #0a0a0a;
      overflow-x: hidden;
      position: relative;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(255, 215, 0, 0.06) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    .scroll-progress {
      position: fixed;
      top: 0;
      left: 0;
      height: 4px;
      background: linear-gradient(90deg, #d4af37, #ffd700, #d4af37);
      z-index: 9999;
      transition: width 0.1s ease;
      box-shadow: 0 0 20px rgba(212, 175, 55, 0.8);
    }

    .nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      padding: 20px 0;
      z-index: 1000;
      transition: all 0.4s ease;
      background: rgba(10, 10, 10, 0.6);
      backdrop-filter: blur(10px);
    }

    .nav.scrolled {
      padding: 15px 0;
      background: rgba(10, 10, 10, 0.95);
      box-shadow: 0 5px 30px rgba(0, 0, 0, 0.5);
    }

    .nav-content {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 40px;
    }

    .logo img {
      height: 100px;
      width: 140px;
      transition: all 0.3s ease;
    }

    .nav.scrolled .logo img {
      height: 50px;
    }

    .menu ul {
      display: flex;
      list-style: none;
      gap: 40px;
      align-items: center;
    }

    .menu a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      position: relative;
    }

    .menu a::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 0;
      height: 2px;
      background: linear-gradient(90deg, #d4af37, #ffd700);
      transition: width 0.3s ease;
    }

    .menu a:hover::after {
      width: 100%;
    }

    .menu a:hover {
      color: #d4af37;
    }

    .hero-section {
      text-align: center;
      padding: 180px 20px 120px;
      position: relative;
      overflow: hidden;
    }

    .hero-section::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300%;
      height: 300%;
      background: 
        radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 40%),
        radial-gradient(circle, rgba(255, 215, 0, 0.1) 20%, transparent 60%);
      animation: rotate 30s linear infinite;
    }

    @keyframes rotate {
      from { transform: translate(-50%, -50%) rotate(0deg); }
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    .hero-title {
      font-family: 'Playfair Display', serif;
      font-size: 5.5rem;
      color: #d4af37;
      margin-bottom: 30px;
      position: relative;
      z-index: 2;
      background: linear-gradient(45deg, #d4af37, #ffd700, #ffed4e, #ffd700, #d4af37);
      background-size: 400% 400%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: gradientShift 4s ease-in-out infinite, titleFloat 6s ease-in-out infinite;
      filter: drop-shadow(0 0 40px rgba(212, 175, 55, 0.6));
      letter-spacing: 2px;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes titleFloat {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
    }

    .hero-subtitle {
      font-size: 1.5rem;
      color: rgba(255, 255, 255, 0.9);
      max-width: 700px;
      margin: 0 auto 50px;
      line-height: 1.8;
      position: relative;
      z-index: 2;
      animation: fadeInUp 1.5s ease-out 0.5s both;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .faq-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px 100px;
      position: relative;
      z-index: 1;
    }

    .stats-section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 30px;
      margin-bottom: 80px;
      animation: fadeInUp 1s ease-out 0.8s both;
    }

    .stat-item {
      text-align: center;
      padding: 40px 30px;
      background: linear-gradient(135deg, rgba(212, 175, 55, 0.15), rgba(255, 255, 255, 0.05));
      border-radius: 25px;
      border: 2px solid rgba(212, 175, 55, 0.2);
      backdrop-filter: blur(15px);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .stat-item::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
      animation: rotateGlow 10s linear infinite;
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .stat-item:hover::before {
      opacity: 1;
    }

    @keyframes rotateGlow {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .stat-item:hover {
      transform: translateY(-10px) scale(1.05);
      box-shadow: 0 20px 60px rgba(212, 175, 55, 0.4);
      border-color: rgba(212, 175, 55, 0.6);
    }

    .stat-number {
      font-size: 3.5rem;
      font-weight: 700;
      color: #d4af37;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
      text-shadow: 0 0 30px rgba(212, 175, 55, 0.5);
    }

    .stat-label {
      font-size: 1.1rem;
      color: rgba(255, 255, 255, 0.9);
      font-weight: 500;
      position: relative;
      z-index: 1;
    }

    .search-section {
      text-align: center;
      margin-bottom: 60px;
      position: relative;
      animation: fadeInUp 1s ease-out 1s both;
    }

    .search-wrapper {
      position: relative;
      max-width: 600px;
      margin: 0 auto;
    }

    .search-input {
      width: 100%;
      padding: 22px 60px 22px 30px;
      font-size: 1.1rem;
      border: 2px solid rgba(212, 175, 55, 0.3);
      border-radius: 50px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(15px);
      color: #fff;
      outline: none;
      transition: all 0.4s ease;
    }

    .search-input::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }

    .search-input:focus {
      border-color: #d4af37;
      box-shadow: 0 0 30px rgba(212, 175, 55, 0.4), 0 5px 20px rgba(212, 175, 55, 0.2);
      background: rgba(255, 255, 255, 0.12);
      transform: translateY(-2px);
    }

    .search-icon {
      position: absolute;
      right: 30px;
      top: 50%;
      transform: translateY(-50%);
      color: #d4af37;
      font-size: 1.3rem;
      pointer-events: none;
      transition: all 0.3s ease;
    }

    .search-input:focus ~ .search-icon {
      color: #ffd700;
      transform: translateY(-50%) scale(1.1);
    }

    .category-filters {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 60px;
      flex-wrap: wrap;
      animation: fadeInUp 1s ease-out 1.2s both;
    }

    .category-btn {
      padding: 14px 30px;
      background: rgba(255, 255, 255, 0.08);
      border: 2px solid rgba(212, 175, 55, 0.3);
      border-radius: 30px;
      color: #fff;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .category-btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: linear-gradient(45deg, #d4af37, #ffd700);
      transform: translate(-50%, -50%);
      transition: all 0.5s ease;
    }

    .category-btn:hover::before,
    .category-btn.active::before {
      width: 300%;
      height: 300%;
    }

    .category-btn span {
      position: relative;
      z-index: 1;
    }

    .category-btn:hover,
    .category-btn.active {
      color: #000;
      border-color: #d4af37;
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(212, 175, 55, 0.5);
    }

    .faq-list {
      margin-top: 60px;
    }

    .faq-item {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
      border-radius: 25px;
      margin-bottom: 30px;
      border: 2px solid rgba(255, 255, 255, 0.1);
      overflow: hidden;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(15px);
      position: relative;
      opacity: 0;
      animation: slideInUp 0.6s ease-out forwards;
    }

    .faq-item:nth-child(1) { animation-delay: 0.1s; }
    .faq-item:nth-child(2) { animation-delay: 0.2s; }
    .faq-item:nth-child(3) { animation-delay: 0.3s; }
    .faq-item:nth-child(4) { animation-delay: 0.4s; }
    .faq-item:nth-child(5) { animation-delay: 0.5s; }
    .faq-item:nth-child(6) { animation-delay: 0.6s; }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .faq-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, transparent 60%);
      opacity: 0;
      transition: opacity 0.5s ease;
      border-radius: 25px;
    }

    .faq-item:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 25px 70px rgba(212, 175, 55, 0.4);
      border-color: rgba(212, 175, 55, 0.5);
    }

    .faq-item:hover::before {
      opacity: 1;
    }

    .faq-item.active {
      transform: translateY(-5px);
      box-shadow: 0 20px 60px rgba(212, 175, 55, 0.5);
      border-color: rgba(212, 175, 55, 0.7);
      background: linear-gradient(135deg, rgba(212, 175, 55, 0.2), rgba(255, 255, 255, 0.08));
    }

    .faq-question {
      width: 100%;
      padding: 30px 35px;
      background: none;
      border: none;
      text-align: left;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 25px;
      font-family: 'Montserrat', sans-serif;
      transition: all 0.3s ease;
      position: relative;
      z-index: 1;
    }

    .faq-icon {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background: linear-gradient(135deg, #d4af37, #ffd700, #ffed4e);
      background-size: 200% 200%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #000;
      font-size: 1.6rem;
      flex-shrink: 0;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 5px 20px rgba(212, 175, 55, 0.4);
      animation: iconPulse 3s ease-in-out infinite;
      position: relative;
    }

    .faq-icon::before {
      content: '';
      position: absolute;
      top: -5px;
      left: -5px;
      right: -5px;
      bottom: -5px;
      border-radius: 50%;
      background: linear-gradient(135deg, #d4af37, #ffd700);
      opacity: 0;
      transition: opacity 0.3s ease;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
        opacity: 0;
      }
      50% {
        transform: scale(1.2);
        opacity: 0.3;
      }
    }

    .faq-item:hover .faq-icon::before,
    .faq-item.active .faq-icon::before {
      opacity: 0.5;
    }

    @keyframes iconPulse {
      0%, 100% { 
        transform: scale(1);
        box-shadow: 0 5px 20px rgba(212, 175, 55, 0.4);
      }
      50% { 
        transform: scale(1.08);
        box-shadow: 0 8px 30px rgba(212, 175, 55, 0.6);
      }
    }

    .faq-item:hover .faq-icon,
    .faq-item.active .faq-icon {
      transform: scale(1.1) rotate(360deg);
      box-shadow: 0 8px 30px rgba(212, 175, 55, 0.7);
    }

    .faq-question h3 {
      flex: 1;
      font-size: 1.2rem;
      font-weight: 600;
      color: #fff;
      transition: all 0.3s ease;
      line-height: 1.5;
    }

    .faq-question:hover h3,
    .faq-question.active h3 {
      color: #d4af37;
    }

    .faq-toggle {
      font-size: 2rem;
      color: #d4af37;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      font-weight: 300;
      line-height: 1;
      flex-shrink: 0;
    }

    .faq-question.active .faq-toggle {
      transform: rotate(135deg);
      color: #ffd700;
    }

    .faq-answer {
      max-height: 0;
      overflow: hidden;
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 0 35px;
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.05rem;
      line-height: 1.8;
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
      backdrop-filter: blur(5px);
      position: relative;
    }

    .faq-answer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 35px;
      right: 35px;
      height: 1px;
      background: linear-gradient(90deg, transparent 0%, rgba(212, 175, 55, 0.4) 50%, transparent 100%);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .faq-answer.show {
      max-height: 600px;
      padding: 30px 35px 40px;
    }

    .faq-answer.show::before {
      opacity: 1;
    }

    .no-results {
      text-align: center;
      padding: 80px 20px;
      color: rgba(255, 255, 255, 0.6);
      font-size: 1.3rem;
      display: none;
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .no-results i {
      font-size: 4rem;
      color: rgba(212, 175, 55, 0.3);
      margin-bottom: 20px;
      display: block;
    }

    .contact-cta {
      text-align: center;
      margin-top: 100px;
      padding: 70px 50px;
      background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(0, 0, 0, 0.5) 100%);
      border-radius: 35px;
      border: 2px solid rgba(212, 175, 55, 0.3);
      position: relative;
      overflow: hidden;
      backdrop-filter: blur(20px);
      animation: fadeInUp 1s ease-out 1.5s both;
    }

    .contact-cta::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 70%);
      animation: rotate 20s linear infinite;
    }

    .contact-cta h3 {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      color: #d4af37;
      margin-bottom: 20px;
      position: relative;
      z-index: 1;
    }

    .contact-cta p {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.2rem;
      margin-bottom: 35px;
      position: relative;
      z-index: 1;
      line-height: 1.6;
    }

    .contact-btn {
      display: inline-block;
      padding: 20px 45px;
      background: linear-gradient(45deg, #d4af37, #ffd700);
      color: #000;
      text-decoration: none;
      border-radius: 35px;
      font-weight: 700;
      font-size: 1.1rem;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 35px rgba(212, 175, 55, 0.5);
      position: relative;
      z-index: 1;
      overflow: hidden;
    }

    .contact-btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: linear-gradient(45deg, #ffd700, #ffed4e);
      transform: translate(-50%, -50%);
      transition: all 0.6s ease;
    }

    .contact-btn:hover::before {
      width: 400%;
      height: 400%;
    }

    .contact-btn span {
      position: relative;
      z-index: 1;
    }

    .contact-btn:hover {
      transform: translateY(-5px) scale(1.08);
      box-shadow: 0 15px 50px rgba(212, 175, 55, 0.7);
    }

    .footer {
      background: linear-gradient(135deg, rgba(10, 10, 10, 0.98) 0%, rgba(0, 0, 0, 0.95) 100%);
      padding: 80px 40px 40px;
      margin-top: 100px;
      border-top: 1px solid rgba(212, 175, 55, 0.2);
      position: relative;
    }

    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 50px;
    }

    .footer-col h4 {
      color: #d4af37;
      font-size: 1.3rem;
      margin-bottom: 20px;
      font-weight: 600;
    }

    .footer-col ul {
      list-style: none;
    }

    .footer-col ul li {
      margin-bottom: 12px;
    }

    .footer-col a {
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .footer-col a:hover {
      color: #d4af37;
      padding-left: 5px;
    }

    .social-links {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }

    .social-links a {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      background: rgba(212, 175, 55, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      border: 1px solid rgba(212, 175, 55, 0.3);
    }

    .social-links a:hover {
      background: linear-gradient(45deg, #d4af37, #ffd700);
      transform: translateY(-5px) rotate(360deg);
      box-shadow: 0 5px 20px rgba(212, 175, 55, 0.5);
    }

    .social-links a i {
      color: #d4af37;
      font-size: 1.1rem;
      transition: color 0.3s ease;
    }

    .social-links a:hover i {
      color: #000;
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 3.5rem;
      }

      .hero-subtitle {
        font-size: 1.2rem;
      }

      .nav-content {
        padding: 0 20px;
      }

      .menu ul {
        gap: 20px;
        flex-wrap: wrap;
      }

      .stats-section {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
      }

      .stat-item {
        padding: 30px 20px;
      }

      .stat-number {
        font-size: 2.5rem;
      }

      .faq-icon {
        width: 60px;
        height: 60px;
        font-size: 1.4rem;
      }

      .faq-question h3 {
        font-size: 1.1rem;
      }

      .contact-cta {
        padding: 50px 30px;
      }

      .contact-cta h3 {
        font-size: 2rem;
      }
    }

    @media (max-width: 480px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1rem;
      }

      .stats-section {
        grid-template-columns: 1fr;
      }

      .category-filters {
        gap: 10px;
      }

      .category-btn {
        padding: 12px 20px;
        font-size: 0.9rem;
      }

      .faq-question {
        padding: 25px 20px;
        gap: 15px;
      }

      .faq-icon {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
      }

      .faq-question h3 {
        font-size: 1rem;
      }

      .faq-answer {
        padding: 0 20px;
        font-size: 0.95rem;
      }

      .faq-answer.show {
        padding: 25px 20px 30px;
      }
    }
  </style>
</head>
<body>
  <div class="scroll-progress" id="scrollProgress"></div>

  <nav class="nav" id="navbar">
    <div class="nav-content">
