  <style>
    .nav {
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
      padding: 5px 20px;
      background: rgba(0, 0, 0, 0);
      backdrop-filter: none;
      border-bottom: none;
      transition: all 0.3s ease;
    }
    #footer-club-logo{
      margin-left: 3%;
    }

    .nav.scrolled {
      background: rgba(30, 30, 30, 0.55);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      box-shadow: 0 2px 16px #232a3b40;
      border-bottom: none;
    }

    .banner-section {
      position: relative;
    }

    .banner-image {
      position: relative;
    }

    .banner-image img {
      width: 100%;
      height: 45vh;
      object-fit: cover;
      border-radius: 18px;
      box-shadow: 0 8px 32px #d4af37a0;
      display: block;
    }

    .banner-shadow {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 45vh;
      border-radius: 18px;
      pointer-events: none;
      background: linear-gradient(to bottom, rgba(30, 30, 30, 0.7) 0%, rgba(30, 30, 30, 0.15) 40%, rgba(30, 30, 30, 0) 100%);
      z-index: 2;
    }

    .banner-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      width: 100%;
    }

    .banner-content h1 {
      color: honeydew;
      font-size: 70px;
      font-weight: 700;
      text-shadow: 2px 2px 8px #232a3b, 0 0 12px #d4af37;
      margin-bottom: 12px;
    }

    .banner-content h2 {
      color: #ffe100;
      font-size: 40px;
      font-weight: 600;
      text-shadow: 1.5px 1.5px #232a3b;
    }

    .section-title {
      font-size: 3rem;
      font-weight: 900;
      color: #ffd700;
      text-align: center;
      margin: 48px 0 16px 0;
      letter-spacing: 2px;
      text-shadow: 0 2px 12px #232a3b, 0 0 8px #d4af37;
      transition: color 0.4s, text-shadow 0.4s, transform 0.4s;
      cursor: pointer;
    }

    .section-title:hover {
      color: #d4af37;
      text-shadow: 0 4px 24px #ffd700, 0 0 16px #232a3b;
      transform: scale(1.08);
    }

    .city-section {
      margin: 40px auto;
      max-width: 1200px;
    }

    .outlets-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
      margin-top: 24px;
    }

    .outlet-card {
      background: #434242;
      border-radius: 18px;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
      overflow: hidden;
      transition: transform 0.2s;
      display: flex;
      flex-direction: column;
      align-items: stretch;
    }

    .outlet-card:hover {
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 8px 32px #d4af37a0;
    }

    .outlet-img img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-bottom: 2px solid #d4af37;
    }

    .outlet-info {
      padding: 18px 16px 12px 16px;
      color: #fff;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .outlet-info h3 {
      font-size: 1.3rem;
      color: #ffe100;
      margin-bottom: 8px;
    }

    .outlet-actions {
      margin-top: 16px;
      display: flex;
      gap: 12px;
    }

    .outlet-btn {
      background: linear-gradient(45deg, #d4af37, #ffd700);
      color: #0c1531;
      border-radius: 16px;
      padding: 7px 18px;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.2s;
      border: none;
      box-shadow: 0 2px 8px #d4af3730;
    }

    .outlet-btn:hover {
      background: linear-gradient(45deg, #ffd700, #d4af37);
      color: #000;
    }
